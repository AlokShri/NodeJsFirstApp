
<%- include('../includes/head.ejs') %>
<header  class="headerPage">
    <%- include('../includes/nav.ejs') %>
</header>
<body>

    <section id="form">
        
        <div class="container formBox">

            <div class="title">
                <p>Profile Form </p>
                <hr> 
            </div>
            <div class="row form">

                <div class="col">
                    <h5>Employer</h5>

                    <% if (!Employer) { %>
                    <h5>Invalid Request</h5>
                    <% } else {%>   

                    <form action="/postEmployer/<%= Employer.id %>" method="POST">
                        
 
                        <div class="form-group">
                            <input type="text" class="form-control"  name="name" id="name" placeholder="Name" value = "<%=Employer.name %>">

                        </div>

                        <div class="form-group">
                            <input type="text" class="form-control" name="address1" id="address1" placeholder="Address1"  value = "<%=Employer.address1 %>"> 
                        </div>

                        <div class="form-group">
                            <input type="text" class="form-control" name="address2" id="address2" placeholder="Address2"  value = "<%=Employer.address2 %>">
                        </div>

                        <div class="form-group">
                            <input type="text" class="form-control" name="address3" id="address3" placeholder="Address3"  value = "<%=Employer.address3 %>">
                        </div>


                        <div class="form-group">
                            <input type="text" class="form-control" name="city" id="city" placeholder="City"  value = "<%=Employer.city %>">
                            
                        </div>

                        <div class="form-group">
                            <input type="text" class="form-control" name="state" id="state" placeholder="State"  value = "<%=Employer.state %>">
                        </div>

                        <div class="form-group">
                            <input type="text" class="form-control" name="pin" id="pin" placeholder="Pin"  value = "<%=Employer.pin %>">
                        </div>

                
                    <a href="/home"><i class="fa fa-home formBTNIconLink" ></i> </a>
                    <a href="/getEmployers"><i class="fa fa-arrow-left formBTNIconLink"></i></a>
                    <a href="/delEmployer/<%= Employer.id %>"><i class="fa fa-minus formBTNIconLink"></i></a>
                    <button type="submit" class="btn btn-warning right"><%= btnTitle %></button>
                    </form> 
                    
                    <% } %>
                </div>   
            </div> 
         
        </div>

    </section>
    
    <%- include('../includes/js.ejs') %>
</body>
<%- include('../includes/footer.ejs') %>